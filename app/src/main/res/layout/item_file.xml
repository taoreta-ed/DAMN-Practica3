<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/imageViewFileIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_folder" android:contentDescription="Icono de archivo o carpeta"
        android:layout_marginEnd="16dp"
        app:tint="?attr/colorOnSurface" /> <TextView
    android:id="@+id/textViewFileName"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:textSize="16sp"
    android:textColor="?attr/colorOnSurface" android:text="Nombre del Archivo/Carpeta"
    android:singleLine="true"
    android:ellipsize="end" /> </LinearLayout>